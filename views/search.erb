<section class="center-vertical mt-2">
	<h1>検索フォーム</h1>
	<form action = "search" method = "get">
		<input type="text" name="searchTerm" id = "searchTerm" placeholder="アーティスト名">
		<input type="submit" value="検索">
	</form>
	<h2 class = "mt-4">検索結果</h2>
		
		<% if @searchResults===[] %>
		<%# TODO: 検索結果によって分岐 %>
		<p>検索結果がありません</p>
		
		<% else %>
		
		<div class="center-hrizontal text-center">
			<%#<%= @searchResults[2]%>
			<% for num in 0..@limits-1 do %>
				<div class="post center-vertical">
					<form action = "new" method = "post">
					<img src="<%= @searchResults[num]["artworkUrl100"] %>">
					<p><%= @searchResults[num]["artistName"] %></p>
					<p><%= @searchResults[num]["collectionName"] %></p>
					<p><%= @searchResults[num]["trackName"] %></p>
					<a href="<%= @searchResults[num]["previewUrl"] %>">サンプル</a>
						<input type="hidden" value="<%= @searchResults[num]["artworkUrl100"] %>" name="imgUrl">
						<input type="hidden" value="<%= @searchResults[num]["artistName"] %>" name="artist">
						<input type="hidden" value="<%= @searchResults[num]["previewUrl"] %>" name="musicUrl">
						<input type="text" name="comment" placeholder="コメント">
						<input type="submit" value="投稿">
					</form>
				</div>
			<% end %>
		
		</div>
		<% end %>

</section>